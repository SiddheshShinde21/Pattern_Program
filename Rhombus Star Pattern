import java.util.*;
class LearnYard {
    public static void main(String[] args) {
        // you code goes here
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();

		for(int i = 1;i<=N;i++){
			//Println Spaces
			for(int sp = 1;sp <= N-i;sp++){
				System.out.print(" ");
			}
			// Printing Stars
			for(int j = 1;j<=N;j++){

				System.out.print("*");
			}

			System.out.println("");
		}
    }
}

Input:-5
Output:-
    *****
   *****
  *****
 *****
*****
