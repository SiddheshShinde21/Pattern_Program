import java.util.*;
class LearnYard {
    public static void main(String[] args) {
        // you code goes here
		Scanner sc = new Scanner(System.in);
		int N = sc.nextInt();

		for(int i = 1;i<=N;i++){

			for(int j = 1;j<=i;j++){
				if(i == j || j==1|| j==i || i == N){
				System.out.print("*");
				}
				else{
					System.out.print(" ");
				}
			}
			System.out.println("");
		}

    }
}

Input:- 5
Output:- 
*
**
* *
*  *
*****
